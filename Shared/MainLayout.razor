		if (httpContextAssessor.HttpContext != null)
		{
			var user = httpContextAssessor.HttpContext.Request.Cookies["user"];
			if (string.IsNullOrWhiteSpace(user))
				httpContextAssessor.HttpContext.Response.Cookies.Append("user", $"{Guid.NewGuid()}");
